{% extends 'base.html.twig' %}

{% block title %}Réservations
{% endblock %}

{% block body %}
	<h1>Vos Réservations</h1>

	<table class="table">
		<thead>
			<tr>
				<th>ID</th>
				<th>livre</th>
				<th>Date de création</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for reservation in reservations %}
				<tr>
					<td>{{ reservation.id }}</td>
					 <td>
                    {# Gestion universelle : un ou plusieurs livres #}
                    {% if reservation.book is defined and reservation.book is not null %}
                        {{ reservation.book.title }}
                    {% elseif reservation.books is defined and reservation.books|length > 0 %}
                        {% for book in reservation.books %}
                            {{ book.title }}{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    {% else %}
                        Aucun livre
                    {% endif %}
                </td>
					<td>{{ reservation.createdAt ? reservation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_reservation_show', {'id': reservation.id}) }}">modifier</a>
						{# <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">modifier</a> #}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Aucune réservation trouvée</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_reservation_new') }}">Nouvelle réservation</a>
{% endblock %}
